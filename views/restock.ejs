<div class="restock">
    <h1 class="heading">Restock</h1>
    <main class="form-signin w-100 m-auto">
        <form action="/restock" method="post">
          <img class="mb-4" src="images/restock.png" alt="" width="100" height="72">
      
          <div class="form-floating">
            <input type="text" class="form-control top" name="department" placeholder="Department">
            <label>Department</label>
          </div>
          <div class="form-floating">
            <input type="text" class="form-control middle" name="medName" placeholder="medName">
            <label>Med Name</label>
          </div>
          <div class="form-floating">
            <input type="date" class="form-control middle" name="entryDate" placeholder="entryDate">
            <label>Entry Date</label>
          </div>
          <div class="form-floating">
            <input type="date" class="form-control middle" name="expiryDate" placeholder="expiryDate">
            <label>Expiry Date</label>
          </div>
          <div class="form-floating">
            <input type="number" class="form-control bottom" name="units" placeholder="units">
            <label>Number of units</label>
          </div>
      
          <div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Restock</button>
          </div>
          
        </form>
      </main>    
